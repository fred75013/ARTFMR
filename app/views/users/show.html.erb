
<div class="profile-page" style="margin-bottom: 50px;">
	<div class="page-header header-filter" data-parallax="true" style="background-image:url('http://wallpapere.org/wp-content/uploads/2012/02/black-and-white-city-night.png');"></div>
    	<div class="main main-raised">
			<div class="profile-content">
            	<div class="container">
                	<div class="row">
	                	<div class="col-md-6 ml-auto mr-auto">
        	           		<div class="profile">
	                        	<div class="avatar">
	                            	<img src="https://effet-a.com/wp-content/uploads/2020/03/avatar_neutre-7.png" alt="Circle Image" class="img-raised rounded-circle img-fluid">
								</div>
	                        	<div class="name">
	                            	<h3 class="title"><%= @user.email%></h3>
									<% if current_user.id == @user.id %>
	                        			<%= link_to 'Modifié Mon profile', edit_user_registration_path , class: "link-show-user"%>
									<% end %>
								</div>
	                    	</div>
    	            	</div>
                	</div>
					<div class="row">
						<div class="col-md-6 ml-auto mr-auto">
                        	<div class="profile-tabs">
                          		<ul class="nav nav-pills nav-pills-icons justify-content-center" role="tablist">
                            		<li class="nav-item">
                                		<a class="nav-link active" href="#studio" role="tab" data-toggle="tab">
							  				<% if @user.artist == true %>
												<i class="fa fa-paint-brush"></i>
												Peintures
											<%else %>
												<i class="material-icons">shopping_cart</i>
												Achats
											<% end %>
                                		</a>
                            		</li>
                            		<li class="nav-item">
                                		<a class="nav-link" href="#favorite" role="tab" data-toggle="tab">
																			<%if @user.id == current_user.id%>
                                  			<i class="material-icons">favorite</i>
                                    		Favoris
																			<% end %>
                                		</a>
                            		</li>
                         	 	</ul>
                        	</div>
    	    			</div>
            		</div>
          			<div class="tab-content tab-space">
            		<div class="tab-pane active text-center gallery" id="studio">
  							<div class="row">
							  
								
							  <h2>Mes locations <h2>
				  				<% OrderProduct.all.each do |i|%>
									<%if i.order.user.id == @user.id && i.product.status == "rented"%>
										<div class="col-md-3 m-4">
											<% if i.product.avatar.attached?%>
												<img src="<%= image_tag i.product.avatar, class: "product m-0 p-2"%>" class="product p-0 m-2">
											<% else %>
												<img src="<%=i.product.image_url%>" class="product p-0 m-2">
											<% end %>
											<%= link_to "Prolonger d'un mois ou Acheter definitivement", line_products_path(id: i.product.id), class: "btn btn-primary", :method => 'POST' %></div>
											   <p><%=((i.end_date - i.start_date) /1.day).ceil%> jours restants de location </p>
											   <p>Votre location prendra fin le <%= i.end_date.day %>/<%=i.end_date.month%>/<%=i.end_date.year%></p>  
									<%end%>
								<%end%><br/>

							<h2>Mes achats<h2>
								<% OrderProduct.all.each do |i|%>
									<%if i.order.user.id == @user.id && i.product.status == "sold"%>
										<div class="col-md-3 m-4">
											<% if i.product.avatar.attached?%>
												<img src="<%= image_tag i.product.avatar, class: "product m-0 p-2"%>" class="product p-0 m-2">
											<% else %>
												<img src="<%=i.product.image_url%>" class="product p-0 m-2">
											<% end %>
										
									<%end%>
								<%end%>
								</div> 
								
  							</div>
  						</div>
            	<div class="tab-pane text-center gallery" id="favorite">
      					<div class="row">
      						<div class="col-md-3 ml-auto">
      				 				<img src="" class="rounded">
											<% Like.all.each do |i|%>
													<%if i.user_id == @user.id %>
														<% Product.all.each do |j|%>
															<% if i.product_id == j.id %>
																<% if j.avatar.attached?%>
																	<img src="<%= image_tag j.avatar, class: "product m-0 p-2"%>" class="product p-0 m-2">
																<% else %>
																	<img src="<%= j.image_url%>" class="product p-0 m-2">
																<% end %>
															<% end %>
														<% end %>
												<% end %>
											<% end %>
      							</div>
      							<div class="col-md-3 mr-auto">
      				  				<img src="" class="rounded">
										
      			    			</div>
      						</div>
      					</div>
          			</div>
            	</div>
        	</div>
		</div>
	</div>
</div> 






