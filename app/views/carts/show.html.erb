
  <div class=" text-white py-5 text-center">
  </div>
  

  <div class="pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Produit</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Prix</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Louer/Acheter</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Suppirmer</div>
                  </th>
                </tr>
              </thead>
              <tbody>
              <% @cart.line_products.each do |line_product| %>
                <tr>
                  <th scope="row" class="border-0">
                    <div class="p-2">
                          <% if line_product.product.avatar.attached?%>
                            <%= image_tag line_product.product.avatar, class: "img-fluid rounded shadow-sm", width:"70"%>
                          <% else %>
                            <img src="<%=line_product.product.image_url%>" alt="" width="70" class="img-fluid rounded shadow-sm">
                          <%end %>
                      <div class="ml-3 d-inline-block align-middle">
                        <h5 class="mb-0"> <a href="<%= product_path(line_product.product)%>" class="text-dark d-inline-block align-middle"><%=line_product.product.title%></a></h5><span class="text-muted font-weight-normal font-italic d-block">Daniel Kahneman</span>
                      </div>
                    </div>
                  </th>
                
                  <td class="border-0 align-middle"><strong><%= line_product.price %> €</strong></td>
                  
                  <td class="border-0 align-middle"><strong>
                    
                            <li class="dropdown show" style="list-style-type: none;">
                                <%if line_product.to_buy == true%> 
                                <button class=" dropdown-toggle" style="list-style-type: none" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Acheter</button>
                                <%end%>
                                <%if line_product.to_buy == false%>
                                <button class=" dropdown-toggle" style="list-style-type: none" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Louer</button>
                                <%end%>

                                <div class="dropdown-menu show">

                                <%if line_product.to_buy == true%>
                                    <a class="dropdown-item" ><%= link_to "Louer", line_product_path(line_product), method: :patch, style: "text-align: center;", class: "link-cards" %></a>
                                <%end%>

                                <%if line_product.to_buy == false%>
                                    <a class="dropdown-item" ><%= link_to "Acheter", line_product_path(line_product), method: :patch, style: "text-align: center;", class: "link-cards" %></a>
                                <%end%>    
                            </li>
                  </strong></td>
                  <td class="border-0 align-middle"><%= link_to "", line_product_path(line_product), method: :delete, data: {confirm: "Êtes-vous sur de vouloir suppirmer l'article?"} , class:"fa fa-trash text-dark"%></td>
                </tr>
              <% end %>

              </tbody>
            </table>
                  <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Récapitulatif de la commande</div>
                    <div class="p-4">
                      <ul class="list-unstyled mb-4">
                      <% @cart.line_products.each do |line_product| %>
                        <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-primary"><%=line_product.product.title%></strong><strong><%= line_product.price %> €</strong></li>
                      <% end %>
                        <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-primary">Total</strong>
                        
                        <h5 class="font-weight-bold"><%= number_to_currency(@cart.sub_total) %> €</h5>
                      </li>
                    </ul>
                    
                        <% price = @cart.sub_total %> <%= button_to "PASSER COMMANDE", checkout_index_path(total: price), class: "btn btn-light rounded-pill py-1 btn-block ", remote: true %> 
                    
                  </div>
                </div>
              </div>
        </div>
      </div>
    </div>

