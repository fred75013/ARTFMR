<div class="container">
  <div id="container">
      <h1 style="margin-top: 10px;">&bull; Connexion &bull;</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>        <%= render "devise/shared/error_messages", resource: resource %>
        <form action="#" method="post" id="contact_form">
          <div class="app-form-group mb-3">
            <%= f.email_field :email, autofocus: true, placeholder: "EMAIL", autocomplete:"off" ,class:"phone mb-3" %>
          </div>    
          <div class=" app-form-group mb-4">
            <%= f.password_field :password, placeholder: "MOT DE PASSE", class:"phone" %>
          </div>
          <div class=" d-flex justify-content-center flex-column">
            <%= f.submit "Connexion", id:"form_button"%>
            <div class="mdp-recovery">
              <%-if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Mot de passe oubliÃ©?", new_password_path(resource_name), class:"text-dark"  %><br />
              <% end %>  
            </div>
          </div> 
      <% end %>
      </form> 
  </div> 
</div>