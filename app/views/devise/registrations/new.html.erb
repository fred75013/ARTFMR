
<div class="background">
  <div class="container">
    <div class="screen">
      <div class="screen-body">
        <div class="screen-body-item left">
          <div class="app-title">
            <span>Inscription</span>
         </div>   
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        <div class="screen-body-item">
          <div class="app-form">
            <div class="app-form-group">
              <%= f.email_field :email, autofocus: true, placeholder: "EMAIL", class:"app-form-control" %>
            </div>
            <div class="app-form-group">
                
                <%= f.password_field :password, placeholder: "MOT DE PASSE",class:"app-form-control"  %>
            </div>
            <div class="app-form-group ">
              <%= f.password_field :password_confirmation, placeholder: "MOT DE PASSE", class:"app-form-control" %>
            </div>
            <div class="app-form-group buttons">
              <%= f.submit "Inscription",class:"app-form-button"%>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>