<div class="container">
  <div id="container">
    <h1 style="margin-top: 10px;">&bull; Inscription &bull;</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <form action="#" method="post" id="contact_form">
        <div class="app-form-group mb-3">
          <%= f.email_field :email, autofocus: true, placeholder: "EMAIL", autocomplete:"off" , class:"phone mb-3" %>
        </div>    
        <div class=" app-form-group mb-3">
          <%= f.password_field :password, placeholder: "MOT DE PASSE", class:"phone" %>
        </div>
        <div class="app-form-group py-4 mb-3">
          <%= f.password_field :password_confirmation, placeholder: "CONFIRMATION DU MOT DE PASSE", class:"phone" %>
        </div>   
        <div class=" mb-3 d-flex justify-content-center flex-column">
          <%= f.submit "S'inscrire", id:"form_button"%>
        </div> 
      </form>
    <% end %>
  </div>
</div>

