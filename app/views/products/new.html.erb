<%= form_for(@product) do |f| %>

  <p>
    <%= f.file_field :avatar, multiple:true, class:'form-control input-normal' %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, autofocus: true, placeholder: "Title" %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description, placeholder: "Title" %>
  </p>
   <p>
    <%= f.label :category %><br>
    <%= f.text_field :category, placeholder: "Title" %>
  </p>

   <p>
    <%= f.label :height %><br>
    <%= f.text_field :height, placeholder: "Title" %>
  </p>
   <p>
    <%= f.label :width %><br>
    <%= f.text_field :width, placeholder: "Title" %>
  </p>
   <p>
    <%= f.label :weight %><br>
    <%= f.text_field :weight, placeholder: "Title" %>
  </p>
   <p>
    <%= f.label :price %><br>
    <%= f.number_field :price, placeholder: "Title" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
