  <body>
    <h1>Bonjour</h1>

    
    <% @cart.line_products.each do |line_product|%>
    
    <%if line.to_buy == true && line.product.status == "available" && line.product.admin.email == @email_artist %>
      <%=line_product.product.admin.email%>
      <%=line_product.product.price%><br/>
      <p>ceci est un achat</p>
    <%elsif line.to_buy == false && line.product.status == "available" && line.product.admin.email == @email_artist%>
     
      <%=line_product.product.tile%>
    <%elsif line.to_buy == true && line.product.status == "rented" && line.product.admin.email == @email_artist%>
      <%=line_product.product.admin.email%>
      <%=line_product.product.price%><br/>
      <p>ceci est une extend de location</p>
    <%elsif line.to_buy == false && line.product.status == "rented" && line.product.admin.email == @email_artist%>
      <%=line_product.product.admin.email%>
      <%=line_product.product.price%><br/>
      <p>ceci est un achat coup de coeur</p>
    <%end%>
    <%end%>

